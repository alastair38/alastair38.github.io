h2 Experiments in flatness

div(class="device")
    a(class="arrow-left" href="#")
    a(class="arrow-right" href="#")
    div(class="swiper-container")
        div(class="swiper-wrapper")
            div(class="swiper-slide")
                div(class="content-slide")
                    img(src="http://tomnielsenfineart.com/images/paintings/SEASCAPE-MARINE-PAINTING-FIRST-LIGHT-SURF.jpg")
            div(class="swiper-slide")
                div(class="content-slide")
                    p Text for two here
    div(class="pagination")


ul
  each article, slug in public.blog._data
    li
      img(src="/blog/#{article.photo}")


script.
    var mySwiper = new Swiper('.swiper-container',{
        loop:true,
        grabCursor: true
      })
      $('.arrow-left').on('click', function(e){
        e.preventDefault()
        mySwiper.swipePrev()
      })
      $('.arrow-right').on('click', function(e){
        e.preventDefault()
        mySwiper.swipeNext()
      })
